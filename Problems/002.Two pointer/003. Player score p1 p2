public class _03_players_score_p1_p2
{
    public static void main(String[] args){
        int[] arr={3,6,2,3,5};
        int p1=0;
        int p2=0;
        boolean rev=false;
        int start=0;
        int end=arr.length-1;

        int turn=1;
        while(start<=end){
            if(turn %2!=0){
                if(rev==false){
                    p1+=arr[start];
                    if(arr[start]%2==0){
                        rev=true;
                    }
                    start++;
                }
                else{
                    p1+=arr[end];
                    if(arr[end]%2==0){
                        rev=false;
                    }
                    end--;
                }
                turn++;

            }

            else{
                if(rev==true){
                    p2+=arr[end];
                    if(arr[end]%2==0){
                        rev=false;
                    }
                    end--;
                }
                else {
                    p2 += arr[start];
                    if (arr[start] % 2 == 0) {
                        rev = true;
                    }
                    start++;
                }
                turn++;
            }
        }
        System.out.println(p1-p2);

    }

}
















