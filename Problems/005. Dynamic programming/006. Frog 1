package com.beginnerdsa.step3._5_recursion;

public class _06_frog1 {
    public static void main(String[] args) {
        int n=4;
        int[] height={0,10,30,40,20};

        int[] dp=new int[n+1];

        dp[1]=0;
        dp[2]=Math.abs(height[2]-height[1]);

        for(int i=3;i<=n;i++){
            dp[i]=Math.min(dp[i-1]+Math.abs(height[i]-height[i-1]),dp[i-2]+Math.abs(height[i]-height[i-2]));
        }

        System.out.println(dp[n]);

    }
}

