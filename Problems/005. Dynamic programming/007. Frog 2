package com.beginnerdsa.step3._5_recursion;

import java.util.Scanner;

public class _07_frog2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int k = sc.nextInt();
        int[] height = new int[n + 1];

        for (int i = 1; i <= n; i++) {
            height[i] = sc.nextInt();
        }

        int[] dp = new int[n + 1];

        dp[1] = 0;
        dp[2] =Math.abs( height[2] - height[1]);

        for (int i = 3; i <= n; i++) {
            dp[i] = Integer.MAX_VALUE;
            for (int j = 1; j <= k; j++) {
                if((i-j)>=1){
                    int a = Math.abs(height[i] - height[i-j]) + dp[i-j];
                    if (dp[i] > a) {
                        dp[i] = a;
                    }
                }

            }
        }
        System.out.println(dp[n]);
    }
}
