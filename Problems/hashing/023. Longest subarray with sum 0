package com.beginnerdsa.step3._1_Hashing;


import java.util.HashMap;
import java.util.Map;
public class _24_longest_subarray_with_sum_0 {
    public static void main(String[] args){
        int arr[]={-31 ,-48, -90, 54 ,20 ,95 ,6 ,-86, 22};

        Map<Integer,Integer> map=new HashMap<>();
        int mxlen=-1;
        int sum=0;
        for(int i=0;i<arr.length;i++){
            sum+=arr[i];
            if(sum==0){
                mxlen=i+1;
            }
            if(!map.containsKey(sum)){
                map.put(sum,i);
            }
            else{
                if(mxlen<i-map.get(sum)){
                    mxlen=i-map.get(sum);
                }
            }
        }
    System.out.println(mxlen);
    }
}
